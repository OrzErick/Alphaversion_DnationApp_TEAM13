<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#191919"
    tools:context=".Donar">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="100dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Seleccione su monto a donar:"
            android:textColor="#FEFEFE"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="135dp"
        android:layout_height="78dp"
        android:layout_gravity="right"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bamx_gdl_logo2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text=" DONAR"
            android:textColor="#F0970B"
            android:textSize="60sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="150dp"
        android:background="#DC0031"
        android:orientation="vertical">

        <Button
            android:id="@+id/opcion1donativoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:backgroundTint="#DC0031"
            android:fontFamily="sans-serif-black"
            android:text="$100"
            android:textColor="#FEFEFE"
            android:textSize="30dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="150dp"
        android:layout_marginRight="5dp"
        android:background="#DC0031"
        android:orientation="vertical">

        <Button
            android:id="@+id/opcion2donativoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:backgroundTint="#DC0031"
            android:fontFamily="sans-serif-black"
            android:text="$200"
            android:textColor="#FEFEFE"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:layout_marginTop="150dp"
        android:layout_marginRight="5dp"
        android:background="#DC0031"
        android:orientation="vertical">

        <Button
            android:id="@+id/opcion3donativoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:backgroundTint="#DC0031"
            android:fontFamily="sans-serif-black"
            android:text="$300"
            android:textColor="#FEFEFE"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="225dp"
        android:background="#DC0031"
        android:orientation="vertical">

        <Button
            android:id="@+id/opcion4donativoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:backgroundTint="#DC0031"
            android:fontFamily="sans-serif-black"
            android:text="$500"
            android:textColor="#FEFEFE"
            android:textSize="30dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="225dp"
        android:layout_marginRight="5dp"
        android:background="#DC0031"
        android:orientation="vertical">

        <Button
            android:id="@+id/opcion5donativoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:backgroundTint="#DC0031"
            android:fontFamily="sans-serif-black"
            android:text="$800"
            android:textColor="#FEFEFE"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:layout_marginTop="225dp"
        android:layout_marginRight="5dp"
        android:background="#DC0031"
        android:orientation="vertical">

        <Button
            android:id="@+id/opcion6donativoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:backgroundTint="#DC0031"
            android:fontFamily="sans-serif-black"
            android:text="$900"
            android:textColor="#FEFEFE"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:fontFamily="sans-serif-medium"
            android:text="Total a donar o Personalizar Cantidad:"
            android:textColor="#FCFCFC"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="340dp"
        android:background="#DB0031"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="top|left"
            android:layout_weight="1"
            android:src="@drawable/baseline_monetization_on_24" />

        <EditText
            android:id="@+id/TotalDonareditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#FDFDFD"
            android:ems="10"
            android:fontFamily="sans-serif-black"
            android:hint="0.00"
            android:inputType="number|numberDecimal"
            android:minHeight="48dp"
            android:textColor="#FDFDFD"
            android:textColorHint="#FBFBFB"
            android:textSize="30dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="410dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:fontFamily="sans-serif-medium"
            android:text="Selecciona el modo de donativo:"
            android:textColor="#FCFCFC"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="440dp"
        android:orientation="horizontal">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/PagoUnicoradioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#EF960B"
                android:buttonTint="#EF960B"
                android:fontFamily="sans-serif-medium"
                android:text="Pago Ãšnico"
                android:textColor="#FDFDFD"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/PagoMensualradioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#EF960B"
                android:buttonTint="#EF960B"
                android:drawableTint="#EF960B"
                android:fontFamily="sans-serif-medium"
                android:text="Pago Mensual"
                android:textColor="#FDFDFD"
                android:textSize="20sp" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="540dp"
        android:layout_marginRight="5dp"
        android:background="#DC0031"
        android:orientation="vertical">

        <Button
            android:id="@+id/DonarButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:backgroundTint="#DC0031"
            android:fontFamily="sans-serif-black"
            android:text="DONAR"
            android:textColor="#FEFEFE"
            android:textSize="30dp" />
    </LinearLayout>

</FrameLayout>