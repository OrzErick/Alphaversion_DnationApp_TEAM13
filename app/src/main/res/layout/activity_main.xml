<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#191919"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/LogoBAMXimageView"
            android:layout_width="wrap_content"
            android:layout_height="236dp"
            android:scaleType="fitStart"
            app:srcCompat="@drawable/bamx_gdl_logo2" />

        <TextView
            android:id="@+id/BienvenidotextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Bienvenido"
            android:textAlignment="center"
            android:textColor="#DD0031"
            android:textColorHint="#DD0031"
            android:textSize="50sp"
            android:visibility="visible" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/IniciarSesiontextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Iniciar Sesi칩n"
            android:textColor="#F0970B"
            android:textSize="24sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/EmailtextView"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:fontFamily="sans-serif-black"
            android:text="Email"
            android:textAlignment="viewStart"
            android:textColor="#DC0031"
            android:textSize="16sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/EmailLogoimageView"
                android:layout_width="22dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/email_icon" />

            <EditText
                android:id="@+id/EmailAdresseditText"
                android:layout_width="315dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="sans-serif-medium"
                android:hint="Ingresa tu Correo Electronico"
                android:inputType="textEmailAddress"
                android:minHeight="48dp"
                android:textColor="#FEFEFE"
                android:textColorHint="#FEFEFE" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/ContrasenatextView"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:fontFamily="sans-serif-black"
            android:text="Contrase침a"
            android:textColor="#F0970B"
            android:textSize="16sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ContrasenaimageView"
                android:layout_width="85dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/password_icon" />

            <EditText
                android:id="@+id/PasswordeditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="sans-serif-medium"
                android:hint="Ingresa tu Contrase침a"
                android:inputType="textPassword"
                android:minHeight="48dp"
                android:textColor="#FEFEFE"
                android:textColorHint="#FEFEFE"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <Button
                android:id="@+id/IniciarSesionbutton"
                android:layout_width="213dp"
                android:layout_height="67dp"
                android:layout_gravity="center"
                android:backgroundTint="#DC0031"
                android:fontFamily="sans-serif-black"
                android:text="Iniciar Sesi칩n"
                android:textColorHighlight="#DC0031"
                android:textColorLink="#DC0031"
                android:textSize="16sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <Button
                android:id="@+id/Registrarsebutton"
                android:layout_width="143dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#F0970B"
                android:fontFamily="sans-serif-black"
                android:text="Registrarse" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>