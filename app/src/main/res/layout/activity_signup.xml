<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#191919"
    tools:context=".RegistrarActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/logoBAMXimageView"
            android:layout_width="wrap_content"
            android:layout_height="236dp"
            android:scaleType="fitStart"
            app:srcCompat="@drawable/bamx_gdl_logo2" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/RegistrarsetextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Creación de Cuenta"
            android:textAlignment="center"
            android:textColor="#DD0031"
            android:textColorHint="#DD0031"
            android:textSize="34sp"
            android:visibility="visible" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Ingresa tus datos"
            android:textAlignment="viewStart"
            android:textColor="#F0970B"
            android:textSize="20sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <EditText
            android:id="@+id/NameeditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#F0970B"
            android:ems="10"
            android:fontFamily="sans-serif-medium"
            android:hint="Escribe tu nombre"
            android:inputType="text"
            android:minHeight="48dp"
            android:textColor="#DD0031"
            android:textColorHint="#DD0031"
            android:textSize="16sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <EditText
            android:id="@+id/EmailRegistereditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#F0970B"
            android:ems="10"
            android:fontFamily="sans-serif-medium"
            android:hint="Escribe tu correo electronico"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:textColor="#DD0031"
            android:textColorHint="#DD0031"
            android:textSize="16sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <EditText
            android:id="@+id/PasswordRegistereditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#F0970B"
            android:ems="10"
            android:fontFamily="sans-serif-medium"
            android:hint="Escribe tu Contraseña"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:textColor="#DD0031"
            android:textColorHint="#DD0031"
            android:textSize="16sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <EditText
            android:id="@+id/ConfirmPasswordeditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#F0970B"
            android:ems="10"
            android:fontFamily="sans-serif-medium"
            android:hint="Confirme su Contraseña"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:textColor="#DD0031"
            android:textColorHint="#DD0031"
            android:textSize="16sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <Button
            android:id="@+id/RegistrarseButton"
            android:layout_width="178dp"
            android:layout_height="79dp"
            android:layout_gravity="center"
            android:backgroundTint="#F0970B"
            android:fontFamily="sans-serif-black"
            android:text="Registrarse"
            android:textSize="24sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <Button
            android:id="@+id/BackButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#DD0031"
            android:fontFamily="sans-serif-black"
            android:text="Regresar" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>